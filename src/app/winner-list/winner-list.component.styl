:host {
  width: 100%

  .component {
    width: 80%
    margin 0 auto
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: flex-start;

    .header {
    }

    .list {
      width: 100%
      list-style: none;
      padding: 0;
      height: 450px;
      overflow-y: scroll;
      padding-right: 10px;

      .list-item {
        margin 5px 0
        padding 10px
        border 2px solid #e6e6e6
        border-radius 5px
        background: rgba(0, 0, 0, 0.1);

        display flex
        flex-direction row
        flex-wrap nowrap
        justify-content space-around
        align-items center
      }
    }
  }
}
